<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <error-page>
     <error-code>404</error-code>
    <location>/404.jsp</location>
</error-page>

<error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
</error-page>



   <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>com.servlet.IndexServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>appbalance</servlet-name>
    <servlet-class>com.servlet.appServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>appbalance</servlet-name>
    <url-pattern>/app/balance</url-pattern>
  </servlet-mapping>
  
     <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.servlet.UserServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
       <servlet>
    <servlet-name>regist</servlet-name>
    <servlet-class>com.servlet.UserServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>regist</servlet-name>
    <url-pattern>/regist</url-pattern>
  </servlet-mapping>
  
       <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.servlet.UserServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>ValidateCodeServlet</servlet-name>
    <servlet-class>com.servlet.ValidateCodeServlet</servlet-class>
  </servlet>
   <servlet-mapping>
    <servlet-name>ValidateCodeServlet</servlet-name>
    <url-pattern>/ValidateCodeServlet</url-pattern>
  </servlet-mapping>
  
         <servlet>
    <servlet-name>payRecord</servlet-name>
    <servlet-class>com.servlet.PayRecordServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>payRecord</servlet-name>
    <url-pattern>/app/payRecord</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>finance</servlet-name>
    <servlet-class>com.servlet.FinanceManagerServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>finance</servlet-name>
    <url-pattern>/app/finance</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>message</servlet-name>
    <servlet-class>com.servlet.MessageServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>message</servlet-name>
    <url-pattern>/app/message</url-pattern>
  </servlet-mapping>
  
      <servlet>
    <servlet-name>qualification</servlet-name>
    <servlet-class>com.servlet.UserServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>qualification</servlet-name>
    <url-pattern>/app/qualification</url-pattern>
  </servlet-mapping>
  
        <servlet>
    <servlet-name>appManager</servlet-name>
    <servlet-class>com.servlet.UserServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>appManager</servlet-name>
    <url-pattern>/app/appManager</url-pattern>
  </servlet-mapping>
  
          <servlet>
    <servlet-name>urlManager</servlet-name>
    <servlet-class>com.servlet.UserServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>urlManager</servlet-name>
    <url-pattern>/app/urlManager</url-pattern>
  </servlet-mapping>
  
</web-app>
